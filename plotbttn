JSR $FB40 ;LORES GR
  LDY #05
  LDX #05
KEYIN LDA #00
  JSR $FD1B
  CMP #$C1 ; A
  BEQ AMOV
  CMP #$C4 ; D
  BEQ DMOV
  CMP #$D3 ;S
  BEQ SMOV
  CMP #$D7 ;W
  BEQ WMOV
  CMP #$D1 ;Q
  BEQ EXIT
  JMP KEYIN
CSAVE JSR $FF4A
  JSR $F832
  JSR $FF3F
  LDA #44 ;COLOR15
  STA $0030
  RTS
AMOV CPY #$0
  BEQ KEYIN
  JSR CSAVE
  DEY
  TXA
  JSR $F800
  JMP KEYIN
DMOV CPY #$27
  BEQ KEYIN
  JSR CSAVE
  INY
  TXA
  JSR $F800
  JMP KEYIN
SMOV CPX #$27
  BEQ KEYIN
  JSR CSAVE
  INX
  TXA
  JSR $F800
  JMP KEYIN
WMOV CPX #$0
  BEQ KEYIN
  JSR CSAVE
  DEX
  TXA
  JSR $F800
  JMP KEYIN
EXIT BRK
  END
